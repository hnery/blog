<div class='_index_root center-block'>
  <ul class='list-unstyled'>
    <% page.posts.each(function(post){ %>
      <% if(post.layout === 'post') { %>
        <li class='row'>
          <a href="<%- url_for(post.path) %>">
            <figure class='center-block _post_preview'>
              <div class='_cover'>
                <% if(post.photos[0]) { %>
                <%- image_tag(post.photos[0], { class: 'img-responsive' }) %>
                <% } %>
              </div>
              <h3 class='text-center _header'>
                <span class='_title'>
                  <%= post.title %>
                </span>
                <% if(post.excerpt) { %>
                <small class='_excerpt'>
                  <%- post.excerpt %>
                </small>
                <% } %>
              </h3>
            </figure>
          </a>
        </li>
    <% } %>
  <% }) %>
  </ul>
</div>
